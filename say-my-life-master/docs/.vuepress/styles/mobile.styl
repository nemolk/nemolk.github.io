@media screen and (max-width: 900px) {
    .content__default {
        img {
            width: 100%;
            height: auto;
        }
    }

    .home {
        &::-webkit-scrollbar {
            display: none;
        }
    }

    .blog {
        .theme-default-content {
            >iframe.bilibili {
                width: 100%;
                height: 200px !important;
            }
            >iframe.qqmusic {
                width: 100%;
                height: 200px !important;
            }
        }
    }

    .blog-catalog {
        .page {
            display: block !important;
            padding: 0 !important;

            .code-height600 {
                pre, .line-numbers-wrapper {
                    max-height: 100%;
                    overflow: auto;
                }
            }
        }

        .blog-directory {
            display: none;
        }
    }
}